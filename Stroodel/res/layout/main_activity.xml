<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalibrateActivity" >

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Main Layout" />

   	<Button
   	    android:id="@+id/btnCalibrate"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/textViewMain"
   	    android:layout_below="@+id/textViewMain"
   	    android:layout_marginLeft="90dp"
   	    android:layout_marginTop="28dp"
   	    android:text="Calibrate" />

   	<Button
   	    android:id="@+id/btnDetection"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/btnCalibrate"
   	    android:layout_below="@+id/btnCalibrate"
   	    android:layout_marginTop="18dp"
   	    android:text="Detection" />

   	<Button
   	    android:id="@+id/btnProperties"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/btnDetection"
   	    android:layout_alignLeft="@+id/btn3D"
   	    android:text="Properties" />

   	<Button
   	    android:id="@+id/btn3D"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/btnDetection"
   	    android:layout_marginLeft="60dp"
   	    android:layout_toRightOf="@+id/btnDetection"
   	    android:text="3D" />

</RelativeLayout>
